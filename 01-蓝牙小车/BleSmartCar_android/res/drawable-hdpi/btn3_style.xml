<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true">
  <shape>
      <gradient android:startColor="#6ba8ea" android:endColor="#208de8" android:angle="90"/>
      <stroke android:width="1dip" android:color="#272727"/>
      <corners android:radius="5dp"/>
      <padding android:left="5dp" android:top="5dp" android:right="5dp"
               android:bottom="10dp"/>
  </shape>
  </item>
  
   <item android:state_focused="true">
  <shape>
      <gradient android:startColor="#cccccc" android:endColor="#cccccc" android:angle="90"/>
      <stroke android:width="2dip" android:color="#808080"/>
      <corners android:radius="5dp"/>
      <padding android:left="5dp" android:top="5dp" android:right="5dp"
               android:bottom="5dp"/>
  </shape>
  </item>
  
  <item>
  <shape>
      <gradient android:startColor="#cccccc" android:endColor="#cccccc" android:angle="90"/>
      <stroke android:width="1dip" android:color="#606060"/>
      <corners android:radius="5dp"/>
      <padding android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp"/>
  </shape>
  </item>
</selector>